<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jefer.slstourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities"
            android:label="@string/category_activities" />
        <activity
            android:name=".AttractionActivity"
            android:label="@string/category_attractions" />
        <activity
            android:name=".FoodActivity"
            android:label="@string/category_food" />
        <activity
            android:name=".ShopActivity"
            android:label="@string/category_shopping" />
    </application>

</manifest>